[user]
  name = Julien Silland
  email = julien@soliton.io
[push]
  default = upstream
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
[alias]
  br = branch 
  cl = clone
  ci = commit
  co = checkout
  cp = cherry-pick
  dc = diff --cached
  diff = diff --word-diff
  fl = log -u
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  rb = "!sh -c 'git co master && git pull --rebase && git co - && git rebase master'"
  st = status -s
  sn = log --author=$USER --no-merges --since="1 week ago" --format=format:"%h %s"
  lnf = !git log --invert-grep --grep='^fixup!' -n 1 --format=format:%H
  fix = !git commit --fixup `git lnf`
  fp = "!sh -c 'git fix && git push'"
